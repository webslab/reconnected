<div
  id="hero-modal"
  class="modal"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Select Hero Image</h5>

        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <select class="form-select" size="10"></select>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>

  <script>
    const heroModal = document.getElementById('modal-hero')
    const close = heroModal.querySelector('.btn-secondary')
    const save = heroModal.querySelector('.btn-primary')

    save.addEventListener('click', () => {
      const select = heroModal.querySelector('select')

      if (select.value) {
        const event = new CustomEvent('hero:modal:data', { detail: select.value })
        heroModal.dispatchEvent(event)

        close.click()
      }
    })
  </script>
</div>

<script>
  import 'bootstrap/js/dist/modal'
</script>
