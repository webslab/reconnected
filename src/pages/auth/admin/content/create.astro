---
import BaseLayout from '$layouts/Base.astro'
import PostsCreate from '$components/admin/posts/PostsCreate.astro'
---

<BaseLayout
  auth={true}
  admin={true}
  title="Post Create"
  description="Posts editor to create new posts">

  <div class="d-flex flex-row justify-content-center align-items-center px-3">
    <a
      onclick="history.back()"
      class="d-none d-lg-block btn btn-outline-primary pt-0"
      href="#">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
      </svg>
    </a>

    <h1 class="w-100">Post Editor</h1>

    <button
      id="save"
      data-table=""
      type="submit"
      class="btn btn-primary">
      Save
    </button>
  </div>

  <hr />

  <div class="container">
    <PostsCreate />
  </div>
</BaseLayout>

<script>
  const tables = ['post', 'module']
  const table = new URLSearchParams(window.location.search).get('table')

  if (tables.includes(table)) {
    document.getElementById('save').dataset.table = table
  } else {
    history.back()
  }
</script>
